<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation" >
          <div class="text-danger">
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        </div>
      <% end %>

      <%= form_for(@user) do |f| %>
       <div class="form-group">
         <%= f.label :name, "Name" %>
         <%= f.text_field :name, class: "form-control" %>
       </div>
        <div class="form-group">Image</div>
        <%= f.attachment_field :profile_image %>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, rows:'2', class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>