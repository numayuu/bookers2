<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <nav class="nav navbar-left">
             <span class="title">Bookers</span>
         </nav>
         <nav>
            <ul class="d-flex justify-content-end">
             <% if user_signed_in? %>
               <li>
                 <%= link_to root_path, class:"btn btn-link" do %>
                 <span class="fas fa-home"> Home</span>
                 <% end %>
               </li>
               <li>
                 <%= link_to root_path, class:"btn btn-link" do %>
                 <span class="fas fa-link"> Users</span>
                 <% end %>
               </li>
               <li>
                 <%= link_to books_path, class:"btn btn-link" do %>
                 <span class="fas fa-user-plus"> Books</span>
                 <% end %>
               </li>
               <li>
                 <%= button_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                 <span class="fas fa-sign-in-alt"> logout</span>
                 <% end %>
               </li>
             <% else %>
               <li>
                 <%= link_to root_path, class:"btn btn-link" do %>
                 <span class="fas fa-home"> Home</span>
                 <% end %>
               </li>
               <li>
                 <%= link_to home_about_path, class:"btn btn-link" do %>
                 <span class="fas fa-link"> About</span>
                 <% end %>
               </li>
               <li>
                 <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                 <span class="fas fa-user-plus"> sign up</span>
                 <% end %>
               </li>
               <li>
                 <%= link_to new_user_session_path, class:"btn btn-link" do %>
                 <span class="fas fa-sign-in-alt"> login</span>
                 <% end %>
               </li>
             <% end %>
          </ul>
        </nav>
      </nav>
      </div>
    </header>

      <%= yield %>


        <footer>
          <div class="container mt-5">
            <div class="row">
              <div class="mx-auto">
               <p class="text-right"> CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>