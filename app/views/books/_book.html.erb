

<div class="container mt-3">
  <h2>New book</h2>
    <div>
      <%= form_with model: book, class: 'new_book', id: 'new_book' do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, value: '', id: 'book_title', class: "form-control" %>
      </div>
      <div class="form-group ">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, value: '', id: 'book_body', class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Create Book", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
